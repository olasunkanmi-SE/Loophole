modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 80

[[ports]]
localPort = 5174
externalPort = 3000

[workflows]
runButton = "Full Stack with Knowledge Check"

[[workflows.workflow]]
name = "Run with JSON Server"
author = 22621996
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx json-server --watch db.json --port 3001 --host 0.0.0.0 --middlewares ./cors.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Run"
author = 22621996
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Full Stack"
author = 22621996
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/index.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Full Stack with Knowledge Check"
author = 22621996
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node -e \"if(process.env.NODE_ENV !== 'production' && !process.env.REPLIT_DEPLOYMENT) { require('child_process').execSync('node scripts/check-recent-changes.js', {stdio: 'inherit'}); }\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/index.js & npm run dev"
